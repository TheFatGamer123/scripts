-- only hunter

local localPlayerName = game.Players.LocalPlayer.Name

for i, player in ipairs(game:GetService('Players'):GetPlayers()) do
    if player.Name ~= "Civillian" and player.Name ~= localPlayerName then
        local args = {
            [1] = workspace:WaitForChild(player.Name)
        }

        game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("KillCharacter"):InvokeServer(unpack(args))
    end
end
    
